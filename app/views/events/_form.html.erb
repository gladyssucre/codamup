<%= form_for @event do |f| %>

<div class="form-group">
  <label>Event name</label>
  <%= f.text_area :name, rows: 1, placeholder: "Event name", class: "form-control" %>
</div>

<div class="form-group">
  <label>Description</label>
  <%= f.text_area :description, rows: 5, placeholder: "Please describe the event", class: "form-control" %>
</div>

<div class="form-group">
  <label>Address</label>
  <%= f.text_field :location, placeholder: "Address", class: "form-control" %>
</div>

<div class="form-group">
  <label>Event price</label>
  <div class="input-group">
    <div class="input-group-addon">â‚¬</div>
    <%= f.number_field :price, placeholder: "eg. 100", class: "form-control" %>
  </div>
</div>

  <div class="form-group">
    <label>Number of Participants</label>
    <%= f.select :capacity, [["2", 2], ["5", 5], ["10", 10], ["15", 15], ["15+", 16]], prompt: "Select number of participants", class: "form-control" %>
  </div>

  <label>Amenities</label>

  <div class="form-group">
    <%= f.check_box :includes_food %> Includes food
  </div>
  <div class="form-group">
    <%= f.check_box :includes_drink %> Includes drinks
  </div>

<div class="form-group">
  <label>Event starts at</label>
  <%= f.datetime_field :starts_at, placeholder: " eg. 10/11/2017 08:00", class: "form-control" %>
</div>

<div class="form-group">
  <label>Event ends at</label>
  <%= f.datetime_field :end_at, placeholder: " eg. 10/11/2017 08:00", class: "form-control" %>
</div>

  <label>Publish this event?</label>

  <div class="form-group">
    <%= f.check_box :active %> Active
  </div>

  <div class="actions">
    <%= f.submit "Save", class: "btn btn-primary" %>
  </div>
<% end %>
