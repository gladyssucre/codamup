<div class="panel panel-primary">
  <div class="panel-heading"><%= @event.name %></div>

  <% if current_user != @event.user %>
    <div class="panel panel-primary">
      <div class="panel-heading">Join this event</div>

      <div class="panel-body">
        <%= render 'bookings/form' %>
      </div>
    </div>
  <% end %>

  <div class="panel-body">

    <p>Address: <%= @event.location %></p>
    <p>Member: <%= @event.user.email %></p>

    <!-- Main Info -->
    <h4>Main Info</h4>
    <p>Location: <%= @event.location %></p>
    <p>Start time: <%= @event.starts_at %></p>
    <p>End time: <%= @event.end_at %></p>
    <p><%= @event.capacity %> <%= @event.capacity > 1 ? "Members" : "Member" %></p>
    <p>Price: <%= @event.price %></p>

    <!-- About -->
    <h4>About</h4>
    <p><%= @event.description %></p>

    <!-- Amenities -->
    <h4>Includes</h4>
    <ul class="amenities">
      <li><%= !@event.includes_food ? "Includes food: Yes" : "Includes food: No" %></li>
      <li><%= !@event.includes_drink ? "Includes drinks: Yes" : "Includes drinks: No" %></li>
    </ul>

    <h4>Categories</h4>
    <% @categories.each do |category| %>
      <span class="label label-success"><%= category.name %></span>
    <% end %>

    <h4>Photos</h4>
    <% @event.photos.each do |photo| %>
    <div class="panel panel-default">
      <div class="panel-heading">
        <%= image_tag photo.image.thumbnail %>
      </div>
    </div>
    <% end %>

  </div>

</div>

<%= link_to "Back", events_path, class: "btn btn-default" %>
